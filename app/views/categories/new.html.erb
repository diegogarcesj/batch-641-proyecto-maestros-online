<div class="container mt-3 mb-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for @category do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create a new category", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
