<section class="container my-5">

    <div class="row">
        <div class="col-md-4 col-sm-12">
            <figure class="abaout__img">
                <h2 class="subtitle text-center"><%= @user.first_name.upcase%> <%= @user.last_name.upcase %></h2>
                <%= cl_image_tag @user.photo.key, height: 217, width: 217, crop: :fill, class: "rounded-circle"%>
            </figure>
        </div>


        <div class="col-md-4 col-sm-12">
            <div class="abaout__texts">
                <h2 class="subtitle text-center">
                    Datos del Usuario
                </h2>
                <p class="abaout__paragraph text-center">
                    <%= @user.email %>
                </p>
                <p class="abaout__paragraph text-center">
                    <%= @user.phone %>
                </p>
                <p class="abaout__paragraph text-center">
                    <%= @user.address %>
                </p>
                <%= link_to "Convierte en Master", new_master_path, class: "btn btn-warning rounded-pill" %>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
        <figure class="map__img">
            <div id="map"
              style="width: 100%; height: 300px;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
            </figure>
        </div>
    </div>
</section>



